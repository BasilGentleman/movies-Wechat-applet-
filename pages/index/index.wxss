/* pages/index/index.wxss */
page{
  background: #FAF9DE;
}
/* 轮播图样式 */
.swiper {
  height: 350rpx;
}

.swiper image {
  width: 100%;
  height: 100%;
}
/* 电影 */
.movie-bar { 
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  display: flex;
}
.movie-tile{
 /* position: absolute; */
 font-size: 34rpx;
 margin-left: 12rpx;
 flex: 1;
}
.movie-more {
  font-size: 34rpx;
  color: #6997D3;
  margin-right: 12rpx;
}


/* 电影展示 */

.scroll-view {
  margin-top: 40rpx;
  width: 100%;
  
}
.movie-info {
  margin-left: 20rpx;
  width: 100%;
  white-space: nowrap;
}
.movie-item {
  width: 30%;
  margin-right: 20rpx;
  display: inline-block;
}
.movie-item image {
  width: 220rpx;
  height: 280rpx;
  border: 1rpx #ddd;
  border-radius: 3%;
}

.movie-name {
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  text-overflow: ellipsis;
  overflow: hidden;
}
