<view class="rate-group"style="margin-top:{{top}}rpx; margin-left:{{left}}rpx">
  <image style="width:{{starsize}}rpx;height:{{starsize}}rpx;" wx:for="{{lights}}" wx:key="index" src="/images/rate_light.png"></image>
  <image style="width:{{starsize}}rpx;height:{{starsize}}rpx;" wx:for="{{halfs}}"  wx:key="index" src="/images/rate_half.png"></image>
  <image style="width:{{starsize}}rpx;height:{{starsize}}rpx;" wx:for="{{grays}}"  wx:key="index" src="/images/rate_gray.png"></image>
  <text style="font-size:{{fontsize}}rpx;color:{{fontcolor}}">{{ratetext}}</text>
</view>
